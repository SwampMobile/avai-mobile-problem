<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swampmobile.avaimobileproblem" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.QueryAsyncTaskActivity"
            android:label="@string/title_activity_query_async_task"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.QueryRobospiceActivity"
            android:label="@string/title_activity_query_robospice"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activities.QueryRxJavaActivity"
            android:label="@string/title_activity_query_rxjava"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
